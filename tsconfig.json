{
  "compilerOptions": {
  "target": "ES2018",
  "module": "ESNext",
  "jsx": "preserve",
  "skipLibCheck": true,
  "allowSyntheticDefaultImports": true,
  "forceConsistentCasingInFileNames": true,
  "useDefineForClassFields": true,
  "sourceMap": true,
  "moduleResolution": "Node",
  "esModuleInterop": true,
  "allowJs": true,
  "strict": true,
  "noEmit": true,
  "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  "lib": [
    "ESNext",
    "ESNext.AsyncIterable",
    "DOM",
    "ES2017",
    "dom",
    "ES2015",
  ],
    "types": [
      "@nuxt/types",
      "@nuxtjs/axios",
      "@nuxtjs/auth-next",
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
